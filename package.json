{
  "name": "hud-recorder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n \"WEB,RENDER\" -c \"cyan,magenta\" \"npm run dev:web\" \"npm run server:render\"",
    "dev:web": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "server:render": "tsx --watch server/remotion-render-server.ts",
    "server:rrweb": "tsx --watch server/rrweb-renderer.ts",
    "remotion:studio": "remotion studio src/remotion/index.ts",
    "remotion:render": "remotion render src/remotion/index.ts HUDOverlay --output out/video.mp4",
    "remotion:render:mp4": "remotion render src/remotion/index.ts HUDOverlay --codec h264 --output out/video.mp4",
    "remotion:render:png": "remotion render src/remotion/index.ts HUDOnly --image-format png --sequence --output out/frames",
    "remotion:render:webm": "remotion render src/remotion/index.ts HUDOnly --codec vp8 --output out/hud-alpha.webm"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@react-three/postprocessing": "^3.0.4",
    "@remotion/cli": "^4.0.407",
    "@remotion/player": "^4.0.407",
    "@theatre/core": "^0.7.2",
    "@theatre/studio": "^0.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.27.5",
    "html-to-image": "^1.11.13",
    "jszip": "^3.10.1",
    "lucide-react": "^0.562.0",
    "mp4-muxer": "^5.2.2",
    "mp4box": "^2.3.0",
    "postprocessing": "^6.38.2",
    "puppeteer": "^24.36.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-vfx": "^0.13.0",
    "remotion": "^4.0.407",
    "rrweb": "^2.0.0-alpha.4",
    "rrweb-player": "^1.0.0-alpha.4",
    "tailwind-merge": "^3.4.0",
    "three": "^0.182.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/archiver": "^7.0.0",
    "@types/dom-webcodecs": "^0.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "archiver": "^7.0.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
